source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
ruby '2.2.1'
gem 'rails', '4.2.3'
#password hashing system
gem 'bcrypt'
# Use SCSS for stylesheets
gem 'sass-rails', '~> 5.0'
# Download the bootstrap-sass plugin by twitter
gem 'bootstrap-sass'
# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'
# Use CoffeeScript for .coffee assets and views
gem 'coffee-rails', '~> 4.1.0'
# See https://github.com/sstephenson/execjs#readme for more supported runtimes
# gem 'therubyracer', platforms: :ruby
gem 'haml-rails'
# Use jquery as the JavaScript library
gem 'jquery-rails'
# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks'
# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 2.0'
# bundle exec rake doc:rails generates the API under doc/api.
gem 'sdoc', '~> 0.4.0', group: :doc

gem 'rails_12factor', group: :production
# Use ActiveModel has_secure_password
# gem 'bcrypt', '~> 3.1.7'

# Use Unicorn as the app server
# gem 'unicorn'

# Use Capistrano for deployment
# gem 'capistrano-rails', group: :development

# Use the postgresql database for Active Record
gem 'pg'
gem 'puma'
gem "recaptcha", :require => "recaptcha/rails"

group :development, :test do
  # Call 'byebug' anywhere in the code to stop execution and get a debugger console
  gem 'byebug'

  # Access an IRB console on exception pages or by using <%= console %> in views
  gem 'web-console', '~> 2.0'

  # Gem that improves error messages on rails server
  gem "better_errors"

  # Spring speeds up development by keeping your application running in the background. Read more: https://github.com/rails/spring
  gem 'spring'

  # Intalls color cordination for tests
  gem 'minitest-reporters'

  # Install basic testing suit
  gem 'mini_backtrace'
  gem 'guard-minitest'
  gem 'guard'
  gem 'guard-rspec'
  gem 'rb-inotify'
  gem 'libnotify'

  # Installs rspec testing suite
  gem 'rspec'
  gem 'rspec-rails'

  # Install Capybara
  gem 'capybara'

  # Install factory_girl
  gem 'factory_girl'

  # Install cucumber
  gem 'cucumber'
  gem 'cucumber-rails', :require => false

  # Install database_cleaner
  gem 'database_cleaner'
end

# Authentication for user login,logout and session management.
gem 'devise'

# Image uploading.
gem 'paperclip'

# Preparing for the views more simple and attractive 
gem 'nested_form'
gem 'simple_form'

# Paginations
gem 'kaminari'

#Easy Searching, Bulk of data
gem 'ransack'

# DateTime Diffrence
gem 'time_difference'

# Parse date in other formats
gem 'timeliness'

# Comments and Reply on the comments
gem 'acts_as_commentable_with_threading'

# Like/DisLike functionality on the comments
gem 'acts_as_votable', '~> 0.10.0'

# Log the users view of the applications books and comics views
gem 'impressionist'

# User friendly urls for the ens users in books and comics
gem 'friendly_id'

# pdf js viewer assets (JavaScripts, stylesheets, and images) for showing the PDF
gem 'pdfjs_rails'

# Gets a list of all the countries in the world
