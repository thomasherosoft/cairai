#content-container
  .row
  .col-lg-12
  .row
    %section
      .container
        .row
          .col-md-5.col-sm-8.col-md-offset-3.col-sm-offset-2.mrg-top50
            .panel.panel-default
              .panel-heading
                %h3.panel-title Forgot your password?
              .panel-body
                = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
                  %fieldset
                    .form-group.required
                      = f.input :email, :placeholder => 'Email', :class => ['form-control']
                  = f.button :submit, "Send me reset password instructions", :class => "btn btn-lg btn-success btn-block"
