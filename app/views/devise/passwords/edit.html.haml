#content-container
  .row
  .col-lg-12
  .row
    %section
      .container
        .row
          .col-md-5.col-sm-8.col-md-offset-3.col-sm-offset-2.mrg-top50
            .panel.panel-default
              .panel-heading
                %h3.panel-title Change your password
              .panel-body
                = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
                  %fieldset
                    .form-group
                      = f.input :reset_password_token, as: :hidden
                    .form-group.required
                      = f.input :password, :placeholder => 'New password', :class => ['form-control'], :autofocus => true, :hint => ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
                    .form-group.required
                      = f.input :password_confirmation, :placeholder => 'Confirm your new password', :class => ['form-control']  
                  = f.button :submit, "Change my password", :class => "btn btn-lg btn-success btn-block"
                  